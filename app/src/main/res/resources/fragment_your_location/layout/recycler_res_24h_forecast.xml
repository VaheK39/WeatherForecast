<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/const_lay_recycler_res_24h_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBlueSky"
    android:padding="8dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/line_lay_top_white_line"
        android:layout_width="0dp"
        android:layout_height="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@android:color/white"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"
        />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/line_lay_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/line_lay_top_white_line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"
        >

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_temp_24h"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="33.04"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_o_24h"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="8sp"
            android:text="@string/o_temp_icon"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_c_24h"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="@string/c_temp_icon"
            />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_weather_icon_24h"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:layout_constraintTop_toBottomOf="@+id/line_lay_temp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/txt_wind_speed_24h"
        />
    
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_time_24h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        app:layout_constraintTop_toBottomOf="@id/img_weather_icon_24h"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/line_lay_bottom_white_line"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="18dp"
        android:text="10:23"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_wind_speed_24h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        app:layout_constraintTop_toTopOf="@+id/txt_time_24h"
        app:layout_constraintStart_toEndOf="@id/txt_time_24h"
        android:layout_marginStart="18dp"
        android:text="9km/h"
        />


    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/line_lay_bottom_white_line"
        android:layout_width="0dp"
        android:layout_height="4dp"
        app:layout_constraintBottom_toTopOf="@+id/line_lay_second_bottom_white_line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@android:color/white"
        android:layout_marginBottom="4dp"
        />


    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/line_lay_second_bottom_white_line"
        android:layout_width="0dp"
        android:layout_height="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@android:color/white"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>