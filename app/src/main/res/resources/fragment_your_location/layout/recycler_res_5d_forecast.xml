<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="9dp">


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_weather_icon_5d"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="30dp"
            android:layout_height="30dp"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_description_5d"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="@+id/img_weather_icon_5d"
            app:layout_constraintStart_toEndOf="@+id/img_weather_icon_5d"
            app:layout_constraintEnd_toStartOf="@+id/txt_day_temp_5d"
            android:textColor="@android:color/white"
            android:fontFamily="@font/cabin"
            android:padding="4dp"
            android:textSize="16sp"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_day_temp_5d"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="@+id/txt_description_5d"
            app:layout_constraintStart_toEndOf="@+id/txt_description_5d"
            android:textColor="@android:color/white"
            android:fontFamily="@font/cabin"
            android:textSize="16sp"
            android:padding="4dp"
            />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_o_5d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/txt_day_temp_5d"
        app:layout_constraintStart_toEndOf="@id/txt_day_temp_5d"
        android:textColor="@android:color/white"
        android:text="@string/o_temp_icon"
        android:textSize="10sp"
        tools:ignore="SmallSp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_slash_temp_5d"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="@id/txt_day_temp_5d"
        app:layout_constraintStart_toEndOf="@id/txt_o_5d"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:text="@string/slash"
        android:padding="4dp"
        />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_night_temp_5d"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="@id/txt_day_temp_5d"
        app:layout_constraintStart_toEndOf="@id/txt_slash_temp_5d"
        app:layout_constraintEnd_toStartOf="@id/txt_o_5d_second"
        android:textColor="@android:color/white"
        android:fontFamily="@font/cabin"
        android:textSize="16sp"
        android:padding="4dp"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_o_5d_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/txt_day_temp_5d"
        app:layout_constraintStart_toEndOf="@id/txt_night_temp_5d"
        android:textColor="@android:color/white"
        android:text="@string/o_temp_icon"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="10sp"
        tools:ignore="SmallSp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
